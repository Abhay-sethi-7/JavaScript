//In JavaScript, data type conversion is the process of converting a value from one data type to another. There are two types of data type conversion:

//Implicit Conversion (Type Coercion): Automatically performed by JavaScript.
//Explicit Conversion: Manually performed by the programmer using built-in methods.



//Implicit Conversion:JavaScript automatically converts data types when performing operations. Here are a few examples
//String to Number
let strToNum = '5' - 3;
console.log(strToNum); 
// Number to String
let numToStr = '5' + 3;
console.log(numToStr); 
// Boolean to Number
let boolToNum = true + 1;
console.log(boolToNum); 


//Explicit Conversion:You can explicitly convert data types using various JavaScript functions and methods.
//"22bcv=>NaN(not a number)"
// Convert to Number
// Using Number function
let str = '123';
let num = Number(str);
console.log(num); // 123
//Using parseInt and parseFloat
let strInt = '123';
let strFloat = '123.45';
let numInt = parseInt(strInt);
let numFloat = parseFloat(strFloat);
console.log(numInt); // 123
console.log(numFloat); // 123.45
// Convert to String
// Using String function
let numb = 123;
let strng = String(numb);
console.log(strng); // '123'
// Using toString method
let newNum = 123;
let newStr = newNum.toString();
console.log(newStr); // '123'

// Convert to Boolean
// Using Boolean function
let Str = 'hello';
let bool = Boolean(Str);
console.log(bool); // true
// Falsy values convert to false: 0, '' (empty string), null, undefined, NaN
console.log(Boolean(0)); // false
console.log(Boolean('')); // false
console.log(Boolean(null)); // false
console.log(Boolean(undefined)); // false
console.log(Boolean(NaN)); // false


// Convert to Object
// Using Object function

let numObj = 123;
let obj = Object(numObj);
console.log(obj); // Number {123}